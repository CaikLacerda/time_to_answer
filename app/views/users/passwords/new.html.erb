<%= render partial: 'users/shared/navbar' %>

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-xl-6 col-lg-8 col-md-10"> 
      <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Esqueceu sua senha?</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder:"Entre com o endereço de email", class:"form-control form-control-user" %>
            </div>
            <div class="actions">
              <%= f.submit "Enviar instruções para o e-mail", class: "btn btn-primary btn-user btn-block" %>
            </div>
          <% end %>
        </div> <!-- Fim do card-body -->
      </div> <!-- Fim do card -->
    </div> <!-- Fim do col -->
  </div> <!-- Fim do row -->
</div> <!-- Fim do container -->

<%= render "users/shared/links" %>

