<div class="row">
  <div class="col-lg-12">
    <h1 class="mb-4"><%= action_message %></h1>
  </div>
</div>

<div class="row">

    <% if @subject.errors.any? %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <ul>
          <% @subject.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
        </ul>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

  <div class="col-lg-12">
    <div class="card shadow-sm"> 

      <div class="card-header bg-primary text-white">
        <strong><%= action_message %> </strong>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-lg-6"> 

            <%= form_with(model: [:admins_backoffice, @subject], local:true) do |form| %>
              <div class="mb-3">
                <%= form.label :description %>
                <%= form.text_field :description, class:"form-control", placeholder: t('messages.placeholder_input', pronoun:"o", attribute: @subject.model_name.human) %>
              </div>

              <button type="submit" class="btn btn-primary"><%= t('messages.submit') %></button>
            <% end %>

          </div> <!-- /.col-lg-6 -->
        </div> <!-- /.row -->
      </div> <!-- /.card-body -->

    </div> <!-- /.card -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->
