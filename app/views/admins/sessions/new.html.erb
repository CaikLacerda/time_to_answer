<div class="container min-vh-100 d-flex justify-content-center align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-xl-6 col-lg-8 col-md-10"> 
      <div class="card o-hidden border-0 shadow-lg">
        <div class="card-body p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Login Administrativo</h1>
          </div>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "user w-100" }) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, placeholder:"Entre com o endereÃ§o de email", class:"form-control form-control-user" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, placeholder: "Senha", class: "form-control form-control-user" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <div class="custom-control custom-checkbox small">
                  <%= f.check_box :remember_me, class: "custom-control-input" %>
                  <%= f.label :remember_me, class: "custom-control-label" %>
                </div>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
            </div>
          <% end %>
        </div> <!-- Fim do card-body -->
      </div> <!-- Fim do card -->
    </div> <!-- Fim do col -->
  </div> <!-- Fim do row -->
</div> <!-- Fim do container -->
