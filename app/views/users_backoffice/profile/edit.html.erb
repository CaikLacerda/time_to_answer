<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Dados do perfil</h2>
        <ul class="nav navbar-right panel_toolbox">
          <li>
            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content">
        <br>
        <%= form_with(url: users_backoffice_profile_path, model: @user , local: true, class: "form-horizontal form-label-left") do |form| %>

          <div class="form-group">
            <%= form.label :first_name, class:"control-label col-md-3 col-sm-3
            col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.text_field :first_name, class: "form-control col-md-7 col-xs-12"%>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :last_name, class:"control-label col-md-3 col-sm-3
            col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.text_field :last_name, class: "form-control col-md-7 col-xs-12"%>
            </div>
          </div>

          <div class="form-group">
            <%= form.label :email, class:"control-label col-md-3 col-sm-3
            col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.text_field :email,
                        class: "form-control col-md-7 col-xs-12",
                        readonly: true%>
            </div>
          </div>

          <%= form.fields_for :user_profile do |profile_form|%>
            <div class="form-group">
              <%= profile_form.label :address, class:"control-label col-md-3 col-sm-3
              col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= profile_form.text_field :address, class: "form-control col-md-7 col-xs-12"%>
              </div>
            </div>

            <div class="mb-3">
              <%= profile_form.label :gender, class: "form-label ms-3 me-3" %>
              <div class="btn-group" role="group">
                <%= profile_form.radio_button :gender, "M", class: "btn-check", id: "gender_m" %>
                <label class="btn btn-outline-primary" for="gender_m">Masculino</label>

                <%= profile_form.radio_button :gender, "F", class: "btn-check", id: "gender_f" %>
                <label class="btn btn-outline-primary" for="gender_f">Feminino</label>
              </div>
            </div>

            <div class="form-group">
              <%= profile_form.label :birthdate, class:"control-label col-md-3 col-sm-3
              col-xs-12" %>
              <div class="col-md-6 col-sm-6 col-xs-12">
                <%= profile_form.date_field :birthdate, class: "form-control col-md-7 col-xs-12"%>
              </div>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :password, class:"control-label col-md-3 col-sm-3
            col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.password_field :password, class: "form-control col-md-7 col-xs-12" %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :password_confirmation, class:"control-label col-md-3 col-sm-3
            col-xs-12" %>
            <div class="col-md-6 col-sm-6 col-xs-12">
              <%= form.password_field :password_confirmation, class: "form-control col-md-7 col-xs-12" %>
            </div>
          </div>

          <div class="ln_solid"></div>

          <div class="form-group">
            <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
              <button type="submit" class="btn btn-success">Enviar</button>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>